{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://.../.../meta/schemas/v0.0.0/scaffolds_attribs_schema.json",
  "description" : "JSON schema for exchanging meta information for scaffolds",

  "definitions" : {
    "seq_region_info" : {
      "type": "object",
      "properties": {
        "version" : {
          "type" : "string",
          "enum" : [ "0.0.0" ],
          "description" : "do we need it at all?"
        },
        "name" : { "type" : "string" },
        "synonym" : {
          "oneOf" : [
          { "type" : "string" },
          { "type" : "array", "items" : { "type" : "string"} }
          ],
            "description" : "Personally I don't like having array and obj with the same name."
        },
        "coord_system_level" : {
          "type" : "string",
          "enum" : [
            "chromosome",
            "scaffold",
            "supercontig",
            "non_ref_scaffold"
            ]
        },
        "omit" : { "type" : "boolean", "decription" : "prevent loading/processing of the scaffold" },
        "circular" : { "type" : "boolean" },
        "codon_table" : {
          "type" : "integer", "default" : 1,
          "minimum" : 1, "maximum" : 25,
          "description" : "wikipedia: 33, https://www.ebi.ac.uk/ena/browse/translation-tables: 25"
        },
        "note" : { "type" : "string", "description" : "optional note" },
        "non_ref" : { "type" : "boolean", "decription" : "clashes with non_ref_scaffold cs ?" },
        "SO_term" : { "type" : "string", "description" : "Attribute to account for mitochondria, apicoplasts, etc." }
      },
      "required" : [
        "name"
      ]
    }
  },

  "oneOf" : [
  { "$ref" : "#/definitions/seq_region_info" },
  { "type": "array", "items" : { "$ref" : "#/definitions/seq_region_info" } }
  ],

    "examples": [
    { "version" : "0.0.0", "note": "bad_example" },
    { "version" : "0.0.0", "name": "2", "note" : "bad but valid example" },
    { "version" : "0.0.0", "name": "MT", "circular" : true, "codon_table" : 2, "SO_term": "mitochondrial_chromosome" },
    { "version" : "0.0.0", "name" : "2", "synonym" : "2L" },
    [ { "version" : "0.0.0", "name" : "2", "synonym" : [ "2L", "2R" ] } ]
      ]
}

