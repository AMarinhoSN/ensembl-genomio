{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://.../.../schema/v0.0.0/seq_attrib_schema.json",
  "description" : "JSON schema for exchanging meta information for sequence attributes",

  "definitions" : {
    "seq_attrib_info" : {
      "type": "object",

      "oneOf" : [
        { "$ref" : "#/definitions/seqedit_info" },
        { "$ref" : "#/definitions/frameshift_info" },
        { "$ref" : "#/definitions/translation_pos_info" }
      ]
    },

    "seqedit_info" : {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "object_type" : { "type" : "string",
          "enum" : [ "transcript", "translation" ]
        },
        "object_id" : { "type" : "string" },
        "seqattrib_type" : { "type" : "string",
          "enum" : [
            "rna_edit",
            "amino_acid_sub",
            "selenocysteine"
          ]
        },
        "start" : { "type" : "integer", "minimum" : 1 },
        "end" : { "type" : "integer", "minimum" : 0 },
        "sequence" : { "type" : "string" }
      },
      "required" : [ "object_type", "object_id", "seqattrib_type", "start", "end", "sequence" ]
    },

    "frameshift_info" : {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "object_type" : { "type" : "string", "value" : "transcript" },
        "object_id" : { "type" : "string" },
        "seqattrib_type" : { "type" : "string",
          "value" : "frameshift"
        },
        "intron_number" : { "type" : "integer", "minimum" : 1 }
      },
      "required" : [ "object_type", "object_id", "seqattrib_type", "intron_number" ]
    },

    "translation_pos_info" : {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "object_type" : { "type" : "string", "value" : "translation" },
        "object_id" : { "type" : "string" },
        "seqattrib_type" : { "type" : "string",
          "enum" : [
            "translation_start",
            "translation_end"
          ]
        },
        "position" : { "type" : "integer", "minimum" : 1 }
      },
      "required" : [ "object_type", "object_id", "seqattrib_type", "position" ]
    }
  },

  "oneOf" : [
    { "$ref" : "#/definitions/seq_attrib_info" },
    { "type": "array", "items" : { "$ref" : "#/definitions/seq_attrib_info" } }
  ],
    "examples" : [
    {
      "object_type": "transcript",
      "object_id": "AEL018662-RA",
      "seqattrib_type": "rna_edit",
      "start": 1537,
      "end": 1537,
      "sequence": "TAA"
    },
    {
      "object_type": "transcript",
      "object_id": "AAEL000404-RA",
      "seqattrib_type": "rna_edit",
      "start": 630,
      "end": 630,
      "sequence": ""
    },
    {
      "object_type": "transcript",
      "object_id": "AAEL000404-RA",
      "seqattrib_type": "rna_edit",
      "start": 847,
      "end": 846,
      "sequence": "N"
    },
    {
      "object_type": "transcript",
      "object_id": "AEL018662-RA",
      "seqattrib_type": "translation_start",
      "position": 9
    },
    {
      "object_type": "transcript",
      "object_id": "AAEL009181-RA",
      "seqattrib_type": "rna_edit",
      "start": 1,
      "end": 0,
      "sequence": "TGCACAAAATGAGAAAACAAGCAATTTTGCTGATAGTCGCCTTTACAATCGCGGTCTCCGCGATCACCGGAGCCGAAGCGGACA"
    },
    {
      "object_type": "transcript",
      "object_id": "AAEL002158-RA",
      "seqattrib_type": "translation_end",
      "position": 832
    },
    {
      "object_type": "transcript",
      "object_id": "AAEL002158-RA",
      "seqattrib_type": "rna_edit",
      "start": 785,
      "end": 784,
      "sequence": "GAGCTGGGCGTGCAGCTCTTTGACGAGTATCTCGATAAGGCGGAGTAAGCCGCTTAGCTCGAGTGTGACTGTAAAATTTAAGAGTTGGGTTTTCCCCGTAGAA"
    },
    {
      "object_type": "transcript",
      "object_id": "AAEL000404-RA",
      "seqattrib_type": "frameshift",
      "intron_number": 2
    },
    {
      "object_type": "translation",
      "object_id": "AAEL002897-PA",
      "seqattrib_type": "amino_acid_sub",
      "start": 63,
      "end": 63,
      "sequence": "X"
    },
    {
      "object_type": "translation",
      "object_id": "AAEL003681-PB",
      "seqattrib_type": "selenocysteine",
      "start": 58,
      "end": 58,
      "sequence": "U"
    }
  ]
}
